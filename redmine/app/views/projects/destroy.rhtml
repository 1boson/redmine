<h2><%=_('Confirmation')%></h2>
<div class="box">
<center>
<p><%=_('Are you sure you want to delete project')%> <strong><%= @project.name %></strong> ?</p>
<p>
    <%= start_form_tag({:controller => 'projects', :action => 'destroy', :id => @project}) %>
    <%= hidden_field_tag "confirm", 1 %>
    <%= submit_tag _('Delete') %>
    <%= end_form_tag %>
</p>
</center>
</div>